<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianqi.auth.dao.ITqAuthUserDAO">
    <resultMap type="com.tianqi.auth.pojo.TqAuthUserDO" id="TqAuthUserMap">
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="state" column="state" jdbcType="VARCHAR"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="columns">
        <include refid="com.tianqi.common.dao.IBaseDAO.commonCol"/>
        type
        ,username
        ,password
        ,state
        ,tenant_id

    </sql>
    <select id="selectUserByUsernameAndTenantId" resultType="com.tianqi.auth.pojo.TqAuthUserDO">
        select c.*, (select name from tq_auth_user) a
        from (select * from tq_auth_user) c
                 left join tq_auth_application taa on c.create_time = taa.create_time
        where c.username in (select username from tq_auth_user)
          and c.tenant_id = #{tenantId}
    </select>

</mapper>

